    <!-- Custom styles for this template -->
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <!-- Fixed navbar -->
    <nav class="navbar navbar-default" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/dashboard">Ontario's Green Button</a>
        </div>
        <div class="nav navbar-nav navbar-right">
          <form action="/login">
            <input type="submit" class="btn btn-default navbar-btn" value="Sign Out"/>
          </form>
        </div>
      </div>
    </nav>

    <!-- Begin page content -->
    <div class="container">
      <div class="page-header">
        <h1>Ontario's Green Button</h1>
      </div>
      <p class="lead">Welcome to your Ontario's Green Button dashboard!</p>
      
      <div class="list-group">
        <a href="/view_data" class="list-group-item">
          <h4 class="list-group-item-heading">View your consumption data</h4>
          <p class="list-group-item-text">Choose this option to view your personal consumption data, sorted by month</p>
        </a>
        <a href="/view_data_timespan" data-toggle="modal" data-target="#search-data" class="list-group-item">
          <h4 class="list-group-item-heading">Search Consumption Data</h4>
          <p class="list-group-item-text">Choose this option to see your consumption data within a specified time frame</p>
        </a>
        <a href="/info" class="list-group-item">
          <h4 class="list-group-item-heading">Update personal information</h4>
          <p class="list-group-item-text">Choose this option to update your personal information</p>
        </a>
  	    <a href="/pay_bills" class="list-group-item">
          <h4 class="list-group-item-heading">View unpaid bills</h4>
          <p class="list-group-item-text">Choose this option to view your unpaid bills, and choose which ones you want to pay</p>
        </a>
      </div>
      
	  <div class="modal fade" id="search-data" tabindex="-1" role="dialog" aria-labelledby="choose-timespan" aria-hidden="true">
	    <div class="modal-dialog">
	      <div class="modal-content">
	        <div class="modal-header">
	          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	          <h4 class="modal-title" id="choose-timespan">Choose a timespan</h4>
	        </div>
	        <form role="form" method="post" action="/view_data_timespan">
		      <div class="modal-body">
		        <div class="form-group">
		          <label for="startDate">Start Date</label>
		          <input class="form-control" type="date" placeholder="yyyy-mm-dd" id="startDate" name="startDate"/>
		        </div>
		        <div class="form-group">
		          <label for="startDate">End Date</label>
		          <input class="form-control" type="date" placeholder="yyyy-mm-dd" id="endDate" name="endDate"/>
		        </div>
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		        <button type="button" class="btn btn-primary">View Data</button>
		      </div>
		    </form>
	      </div>
	    </div>
	  </div>
    </div>

    <footer class="footer">
      <div class="container">
        <p class="text-muted">&#169; 2014 Ontario's Green Button</p>
      </div>
    </footer>


